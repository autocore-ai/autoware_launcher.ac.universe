<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="map_path" doc="point cloud and lanelet2 map directory path" default="$(env SDV_RUN_DIR /AutowareArchitectureProposal/env)/map" />
  <arg name="lanelet2_map_file" default="lanelet2_map.osm" />
  <arg name="pointcloud_map_file" default="pointcloud_map.pcd" />
  <arg name="sensing/visible_range" default="300.0" />
  <arg name="vehicle_model" default="lexus" />
  <arg name="sensor_model" default="aip_xx1" />
  <arg name="rviz" default="false" />
  <arg name="initial_engage_state" default="true"/>
  <include file="$(find-pkg-share autoware_launch)/launch/planning_simulator.launch.xml">
    <arg name="map_path" value="$(var map_path)"/>
    <arg name="lanelet2_map_path" value="$(var map_path)/$(var lanelet2_map_file)" />
    <arg name="pointcloud_map_path" value="$(var map_path)/$(var pointcloud_map_file)" />
    <arg name="vehicle_model" value="$(var vehicle_model)"/>
    <arg name="sensor_model" value="$(var sensor_model)"/>
    <arg name="rviz" value="$(var rviz)"/>
  </include>
  <executable cmd="sh -c $(var map_path)/../startup/$(env HOSTNAME autoware-development-0).sh" output="screen"/>
</launch>
